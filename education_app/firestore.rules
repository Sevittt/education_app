rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Users Collection ---
    // Users can only read/write their own profile.
    // Admins can read/write all.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // --- Learning Records (xAPI) ---
    // Immutable logs. Create only. No delete/update (except Admin).
    match /learning_records/{recordId} {
      allow create: if isAuthenticated() && 
                    request.resource.data.actor.mbox == ('mailto:' + request.auth.uid + '@sudqollanma.uz');
      allow read: if isAuthenticated();
      allow update: if false; // Logs are immutable
      allow delete: if isAdmin();
    }

    // --- Content Collections ---
    // PUBLIC READ for all content, Admin write only
    // This allows anyone (including unauthenticated users) to read content
    match /knowledge_base/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /video_tutorials/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /systems_directory/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /faq/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /app_notifications/{docId} {
       allow read: if isAuthenticated();
       allow write: if isAdmin();
    }
    
    // --- Quizzes Collection ---
    match /quizzes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Resources Collection ---
    match /resources/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Community Collection ---
    match /community_posts/{docId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
    }
    
    // --- News Collection ---
    match /news/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Default Deny (for any unmatched paths) ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
